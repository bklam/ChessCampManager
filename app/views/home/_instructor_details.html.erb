<h3>Your Peronal Instructor Info</h3><br />
<strong>Name:&nbsp;&nbsp;</strong> 
  <%= @instructor.proper_name %><br /><br />

<strong>Phone:&nbsp;&nbsp;</strong> 
  <%= number_to_phone(@instructor.phone) %><br /><br />

<strong>Email:&nbsp;&nbsp;</strong> 
  <%= mail_to @instructor.email, @instructor.email, encode: "javascript" %><br /><br />

<strong>Active?&nbsp;&nbsp;</strong>
  <%= @instructor.active ? "Yes" : "No" %><br /><br />

<strong>Biography</strong><br />
  <%= @instructor.bio.nil? ? "N/A" : @instructor.bio %><br /><br />

<% if not @instructor.user.nil? %>
    <strong>Role</strong><br />
      <%= @instructor.user.role %><br /><br />
<% end %>

<% if not @instructor.user.nil? %>
    <strong>Username</strong><br />
      <%= @instructor.user.username %><br /><br />
<% end %>


<%= link_to "Edit your instructor info", edit_instructor_path(@instructor), class: "button tiny radius" %>&nbsp;&nbsp;
<%= link_to 'Destroy yourself? (system suicide)', instructor_path(@instructor), data: { confirm: 'Are you sure you want to permanently remove this instructor from the system?' }, method: :delete, class: "button tiny radius alert" %>