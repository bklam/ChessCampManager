<%= simple_form_for(@location, html: { class: 'form-horizontal' }) do |f| %>
       
    <div class="row">
      <div class="small-6 columns">
        <h3><%= controller.action_name.capitalize %> Location</h3>
        <%= f.input :name %>
        <%= f.input :street_1 %>
        <%= f.input :street_2 %>
        <%= f.input :city %>
        <%= f.input :state, collection: Location::STATES_LIST, prompt: "Select state..." %>
        <%= f.input :zip %>
        <%= f.input :max_capacity %>
        <%= f.input :active %>
      </div>
      <div class="small-1 columns">&nbsp;</div>
      <div class="small-5 columns">
        <!-- can put in sidebar options here -->
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'button radius' %>
      <%= link_to 'Back to list of locations', locations_path, :class => 'button secondary radius' %>
    </div>

<% end %>